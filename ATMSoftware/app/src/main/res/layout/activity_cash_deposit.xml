<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CashDeposit">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".BalanceEnquiry">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:background="#000000"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFF157"
                android:text="Please ENTER cash in appropriate CASH SLOT."
                android:textSize="34sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:background="#000000"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFF157"
                android:text="Amount must be a multiple of 100 and must not exceed ₹10000."
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="30dp"
                android:background="#000000"
                android:text="Enter Amount (₹):"
                android:textColor="#FFFFFF"
                android:textSize="43sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/deposit_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:background="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="33sp" />

            <Button
                android:id="@+id/deposit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="48dp"
                android:backgroundTint="#000088"
                android:text="Deposit"
                android:padding="10dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:onClick="instructDeposit"/>

            <Button
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="48dp"
                android:backgroundTint="#000088"
                android:text="Return to Main Menu"
                android:padding="10dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:onClick="returnMain"/>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>